<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_manali"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk"
    android:padding="10dp">

    <TextView
        android:id="@+id/city_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Amritsar"

        android:textColor="#ffffff"
        android:textSize="25dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remove"
        android:layout_marginTop="100dp"
        android:id="@+id/remove_loc"
        android:onClick="remove_loc"/>

    <ImageView
        android:id="@+id/side_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:onClick="side_button"
        android:src="@drawable/side_button1" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"

        android:src="@drawable/camera"
        android:id="@+id/camera_open"/>

    <TextView
        android:id="@+id/temp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="weather_inf"
        android:text=""
        android:textColor="#000"
        android:textSize="80dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/weather_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="weather_inf"
        android:text=""
        android:textColor="#000"
        android:textSize="20dp"

        android:layout_above="@+id/temp_txt"
        android:layout_toRightOf="@+id/temp_txt"
        android:layout_toEndOf="@+id/temp_txt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Images/Videos >"
        android:textColor="#0b0b0b"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/img_gallery" />
</RelativeLayout>
